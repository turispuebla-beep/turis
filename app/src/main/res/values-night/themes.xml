<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TURISTEAM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_darker</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_darker</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Colores de fondo -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        
        <!-- Estado de la barra -->
        <item name="android:statusBarColor">@color/black</item>
        
        <!-- Heredar otros estilos del tema principal -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.TURISTEAM.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.TURISTEAM.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.TURISTEAM.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.TURISTEAM.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.TURISTEAM.Caption</item>
        
        <item name="materialButtonStyle">@style/Widget.TURISTEAM.Button</item>
        <item name="textInputStyle">@style/Widget.TURISTEAM.TextInputLayout</item>
        <item name="bottomNavigationStyle">@style/Widget.TURISTEAM.BottomNavigation</item>
    </style>
</resources>