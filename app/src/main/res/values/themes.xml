<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TURISTEAM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Colores de fondo -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface_light</item>
        
        <!-- Estado de la barra -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Estilos de texto -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.TURISTEAM.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.TURISTEAM.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.TURISTEAM.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.TURISTEAM.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.TURISTEAM.Caption</item>
        
        <!-- Estilos de componentes -->
        <item name="materialButtonStyle">@style/Widget.TURISTEAM.Button</item>
        <item name="textInputStyle">@style/Widget.TURISTEAM.TextInputLayout</item>
        <item name="bottomNavigationStyle">@style/Widget.TURISTEAM.BottomNavigation</item>
    </style>

    <!-- Estilos de texto personalizados -->
    <style name="TextAppearance.TURISTEAM.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TURISTEAM.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TURISTEAM.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.TURISTEAM.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.TURISTEAM.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Estilos de componentes personalizados -->
    <style name="Widget.TURISTEAM.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.TURISTEAM.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="Widget.TURISTEAM.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.TURISTEAM.Caption</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.TURISTEAM.Caption</item>
    </style>
</resources>